<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/meals/list">meals</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>
<h1 class="display-4">Edit Order</h1>
<form action="/meals/update?id=<%= order._id %>" method="post">
    <div class="form-group">
        <label for="ordername">Order Name</label>
        <input type="text" name="ordername" id="ordername" class="form-control" value="<%= order.order_name %>">
    </div>
    <div class="form-group">
            <label for="ordertype">Order Type</label>
            <input type="text" name="ordertype" id="ordertype" class="form-control" value="<%= order.order_type %>">
    </div>
    <div class="form-group">
            <label for="count">Count</label>
            <input type="number" name="count" id="count" class="form-control" value="<%= order.count %>">
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>